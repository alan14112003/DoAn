            <tr>
                <th>Room Type</th>
                <th>Price</th>
                <th>Select</th>
            </tr>
        </thead>
        <tbody>
            <!-- Dữ liệu phòng sẽ được load từ server -->
        </tbody>
    </table>
    <div id="bookingInfo" class="booking-info">
        <!-- Thông tin phòng được chọn sẽ hiển thị ở đây -->
    </div>
    <button onclick="bookRooms()">Book Rooms</button>

    <script>
        // Hàm để thêm phòng vào thông tin đặt phòng
        function addRoom() {
            // Lấy thông tin từ form
            const checkin = document.getElementById('checkin').value;
            const checkout = document.getElementById('checkout').value;
            const guests = document.getElementById('guests').value;

            // Tạo HTML cho phòng được chọn
            let selectedRoomsHTML = document.getElementById('selectedRooms');
            if (!selectedRoomsHTML) {
                selectedRoomsHTML = document.createElement('div');
                selectedRoomsHTML.id = 'selectedRooms';
                document.body.appendChild(selectedRoomsHTML);
            }
            selectedRoomsHTML.innerHTML += `
                <div class="selected-room">
                    <h3>Room Information</h3>
                    <p>Check-in: ${checkin}</p>
                    <p>Check-out: ${checkout}</p>
                    <p>Number of Guests: ${guests}</p>
                </div>
            `;
        }

